<div>
    <h1 class="text-2xl font-semibold mb-4">Doctors</h1>

    <a href="/doctors/add"
       class="inline-block mb-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Add Doctor
    </a>

    <table class="w-full bg-white rounded shadow overflow-hidden">
        <thead class="bg-gray-100">
            <tr>
                <th class="p-2 text-left">Name</th>
                <th class="p-2 text-left">Specialization</th>
                <th class="p-2 text-left">Phone</th>
                <th class="p-2 text-left">Fees</th>
            </tr>
        </thead>

        <tbody>
            <% doctors.forEach(d => { %>
                <tr class="border-t hover:bg-gray-50">
                    <td class="p-2"><%= d.name %></td>
                    <td class="p-2"><%= d.specialization %></td>
                    <td class="p-2"><%= d.phone %></td>
                    <td class="p-2"><%= d.fees ? d.fees : '-' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
