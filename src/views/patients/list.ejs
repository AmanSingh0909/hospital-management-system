<div>
    <h1 class="text-2xl font-semibold mb-4">Patients</h1>

    <a href="/patients/add"
       class="inline-block mb-4 bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Add Patient
    </a>

    <table class="w-full bg-white rounded shadow overflow-hidden">
        <thead class="bg-gray-100">
            <tr>
                <th class="p-2 text-left">Name</th>
                <th class="p-2 text-left">Phone</th>
                <th class="p-2 text-left">Created</th>
            </tr>
        </thead>

        <tbody>
            <% patients.forEach(p => { %>
                <tr class="border-t hover:bg-gray-50">
                    <td class="p-2"><%= p.firstName %> <%= p.lastName %></td>
                    <td class="p-2"><%= p.phone %></td>
                    <td class="p-2"><%= new Date(p.createdAt).toLocaleDateString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
